<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Number of Checkins: "
        android:id="@+id/num_check"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/poi_n_text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Latitude: "
        android:id="@+id/lat"
        android:layout_below="@+id/num_check"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Longitude: "
        android:id="@+id/lon"
        android:layout_below="@+id/lat" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Photos: "
        android:id="@+id/photos"
        android:layout_marginTop="63dp"
        android:layout_below="@+id/lon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/photos_text"
        android:autoLink="web"
        android:textColorLink="@android:color/holo_blue_dark"
        android:maxLines = "2000"
        android:scrollbars = "vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/photos"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/num_check_text"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:layout_above="@+id/lat"
        android:layout_alignTop="@+id/num_check"
        android:layout_toRightOf="@+id/num_check"
        android:layout_toEndOf="@+id/num_check" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/lat_text"
        android:gravity="center"
        android:layout_alignRight="@+id/num_check_text"
        android:layout_alignEnd="@+id/num_check_text"
        android:layout_toRightOf="@+id/num_check"
        android:layout_toEndOf="@+id/num_check"
        android:layout_above="@+id/lon_text"
        android:layout_below="@+id/num_check" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/lon_text"
        android:gravity="center"
        android:layout_above="@+id/photos"
        android:layout_alignLeft="@+id/lat_text"
        android:layout_alignStart="@+id/lat_text"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/lon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/poi_n_text"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/num_check_text"
        android:layout_alignEnd="@+id/num_check_text" />

</RelativeLayout>